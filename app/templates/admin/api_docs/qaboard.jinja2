{% extends 'layout/base.jinja2' %}

{% block content %}
<h1>QABoard API Route</h1>
<hr>
<div class="accordion" id="qaboardAPI">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                <span class="badge bg-success me-3">GET</span> <code>/api/qaboard/questions</code>
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
            data-bs-parent="#qaboardAPI">
            <div class="accordion-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" data-bs-toggle="tab" href="#200" aria-selected="true"
                            role="tab">200</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#400" aria-selected="false" role="tab"
                            tabindex="-1">400</a>
                    </li>
                </ul>
                <div id="qaboardQuestion" class="tab-content">
                    <div class="tab-pane fade active show" id="200" role="tabpanel">
                        <p>Response 200</p>
                    </div>
                    <div class="tab-pane fade" id="400" role="tabpanel">
                        <p>Response 400</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}