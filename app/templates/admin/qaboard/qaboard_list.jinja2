{% extends 'layout/base.jinja2' %}

{% block style %}
{% endblock style %}


{% block content %}
<h1>QABoard</h1>

<hr>

{% if board_list|length == 0 %}
<p>등록된 게시글이 없습니다.</p>
{% endif %}

<ul class="list-group mb-3">
    {% for list in board_list %}
    <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <a href="{{ url_for('qa_board.admin_qaboard_detail', question_id = list.id) }}" class="text-decoration-none">{{
            list.title }}</a>
        <span class="badge bg-primary rounded-pill">{{ list.created_at }}</span>
    </li>
    {% endfor %}
</ul>

<hr>

<div class="d-grid gap-3">
    <a href="{{ url_for('qa_board.admin_qaboard_create') }}" class="btn btn-primary">질문 등록</a>
</div>
{% endblock %}


{% block script %}
{% endblock script %}